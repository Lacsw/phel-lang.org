{
    "name": "phel-lang/phel-website",
    "keywords": ["phel","lisp","functional","language"],
    "homepage": "https://phel-lang.org/",
    "license": "MIT",
    "require": {
        "ext-json": "*",
        "phel-lang/phel-lang": "dev-master",
        "gacela-project/gacela": "^0.11"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "PhelDocBuild\\": "build/src/php/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhelDocBuildTests\\": "build/tests/php"
        }
    },
    "scripts": {
        "build": "php build/api-page.php > content/documentation/api.md",
        "test": "./vendor/bin/phpunit"
    }
}
